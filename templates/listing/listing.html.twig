{% extends 'base.html.twig' %}

{% block body %}

<title>ACL Bréalaise - Listing</title>
<br>
<div class="container">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Les Adhérents</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Participants aux stages</a></li>
        <li class="tab col s3"><a href="#test4">Participants aux cours</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
      <table class="responsive-table">
        <thead>
          <tr>
              <th>Nom</th>
              <th>Prénom</th>
              <th>Email</th>
          </tr>
        </thead>
        <!-- la permière variable dans la boucle for est une variable qui va s'initialiser lors de la boucle
        La deuxième variable est celle initialisée dans le controller de la page -->
        {% for adherent in adherents %}
        <tbody>
          <tr>
            <td>{{adherent.username}}</td>
            <td>{{adherent.nom}}</td>
            <td>{{adherent.email}}</td>
          </tr>
        </tbody>
      {% endfor %}
      </table>

    </div>
    <div id="test2" class="col s12">Test 2</div>
    <div id="test4" class="col s12">Test 4</div>
    </div>
  </div>

<script>
$(document).ready(function(){
  $('.tabs').tabs();
});
</script>
{% endblock %}
